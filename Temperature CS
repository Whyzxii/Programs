using System;

class TemperatureConverter{
    
    static void Main(string[] args)
    {
        // Part 1: Temperature Converter - Fahrenheit to Celsius
        Console.Write("Enter the Fahrenheit: ");
        int fahrenheit = Convert.ToInt32(Console.ReadLine());
        double celsius = (fahrenheit - 32) / 1.8;
        Console.WriteLine("Celsius: " + celsius);
        
        // Part 2: Temperature Converter - Celsius to Fahrenheit
        Console.Write("Enter the Celsius: ");
        int celsiusInput = Convert.ToInt32(Console.ReadLine());
        double fahrenheitConverted = (celsiusInput * 1.8) + 32;
        Console.WriteLine("Fahrenheit: " + fahrenheitConverted);
    }
}
